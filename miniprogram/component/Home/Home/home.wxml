<view>
  <view class="dd-account-home-panel__header" style="top:{{navHeight}}px">
    <picker mode="date" value="{{date}}" bindchange="bindDateChange">
      <view style="display:flex;align-items:center;">
        <view class="dd-account-home-panel__header-date">
          <view>{{date}}</view>
          <i-icon type="unfold"  class="dd-account-home-panel__header-date-icon"></i-icon>
        </view>
        <view class="dd-account-home-panel__header-types">
          <view class="dd-account-home-panel__header-types-outgoings">支出￥{{outgoings}}</view>
          <view class="dd-account-home-panel__header-types-income">收入￥{{income}}</view>
        </view>
      </view>
    </picker>
  </view>
  <dd-container-viewer tabHeight="{{tabHeight}}" topHeight="{{topHeight}}" bind:refresh="onRefresh">
    <dd-empty-tip  wx:if="{{!accounts || !accounts.length || !topHeight}}">
      <text>暂无记账，快去记一笔吧~</text>
    </dd-empty-tip>
    <dd-confirm title="删除记录" visible="{{ modalVisible }}" bind:click="handleModalClick">
      <view style="display:flex;align-items:center;justify-content:center">
        <view>删除后无法恢复</view>
      </view>
    </dd-confirm>
    <view class="dd-account-home-panel__list">
      <dd-account-item
        bind:delete="onDelete"
        bind:edit="onEdit"
        wx:for="{{accounts}}"
        wx:key="index" 
        item="{{item}}"
      />
    </view>
  </dd-container-viewer>
</view>
