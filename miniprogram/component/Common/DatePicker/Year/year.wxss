.dd-date-picker__year {
  position: relative;
}

.dd-date-picker__year-year {
  height: 10vh;
  font-size: 32rpx;
  float: left;
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dd-date-picker__year-active {
  box-shadow: 0 4rpx 24rpx 0 rgba(0, 0, 0, 0.1);
  background-image: linear-gradient(to right, #fed682, #febb2e);
}
