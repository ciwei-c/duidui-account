.dd-account__contrast-header {
  padding: 20rpx 0;
  background: #f8f8f9;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
}

.dd-account__contrast-header__types {
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.dd-account__contrast-header__types--active {
  background-color: #febb2e;
}

.dd-account__contrast-header__types-outgoings, .dd-account__contrast-header__types-income {
  transition: all .3s;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
}
