<view class="dd-account__month-contrast">
  <view class="dd-account__month-contrast-header">
    <view style="display:flex;align-items:center;margin-left:10rpx">
      <view style="font-weight:bold">每月对比</view>
      <view  bindtap="onPickerDate">
        <view class="dd-account__month-contrast-header-date">
          <view>{{year}}</view>
          <i-icon type="activity"  class="dd-account__month-contrast-header-date-icon"></i-icon>
        </view>
      </view>
    </view>
    <view class="dd-account__month-contrast-header__types">
      <view bindtap="onChangeType" data-type="outgoings" class="dd-account__month-contrast-header__types-outgoings {{type === 'outgoings' ? 'dd-account__month-contrast-header__types--active' : ''}}">支出</view>
      <view bindtap="onChangeType" data-type="income" class="dd-account__month-contrast-header__types-income {{type === 'income' ? 'dd-account__month-contrast-header__types--active' : ''}}">收入</view>
    </view>
  </view>
  <scroll-view style="width:100%" scroll-x="{{true}}">
    <view class="dd-account__chart">
      <ec-canvas id="chart-dom" class="dd-account__chart-bar" canvas-id="chart-bar" ec="{{ ec }}"></ec-canvas>
    </view>
  </scroll-view>
</view>
