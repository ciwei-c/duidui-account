<view class="dd-account__date-contrast">
  <view class="dd-account__date-contrast-header">
    <view style="margin-left:20rpx">每日比对</view>
    <view class="dd-account__date-contrast-header__types">
      <view bindtap="onChangeType" data-type="outgoings" class="dd-account__date-contrast-header__types-outgoings {{type === 'outgoings' ? 'dd-account__date-contrast-header__types--active' : ''}}">支出</view>
      <view bindtap="onChangeType" data-type="income" class="dd-account__date-contrast-header__types-income {{type === 'income' ? 'dd-account__date-contrast-header__types--active' : ''}}">收入</view>
    </view>
  </view>
  <view class="dd-account__chart">
    <ec-canvas id="mychart-dom-bar" class="dd-account__chart-bar" canvas-id="mychart-bar" ec="{{ ec }}"></ec-canvas>
  </view>
</view>
